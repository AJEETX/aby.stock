@model Aby.StockManager.Model.ViewModel.Store.EditStoreViewModel
@{
    ViewData["Title"] = "Edit Store";
}
@section script{
    <partial name="~/Views/Shared/_FormScriptsPartial.cshtml" />
    <script src="~/pages/store/store-image-delete.js"></script>
}
<section class="content pt-2">
    <div class="container-fluid ">
        <div class="row ">
            <div class="col-md-6">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-pen"></i> Edit Store</h3>
                    </div>
                    <form asp-action="Edit" asp-antiforgery="true" id="frmCreate">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="StoreName"></label>
                                <input asp-for="StoreName" type="text" class="form-control">
                                <span asp-validation-for="StoreName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StoreCode"></label>
                                <input asp-for="StoreCode" type="text" class="form-control">
                                <span asp-validation-for="StoreCode" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Contact"></label>
                                <input asp-for="Contact" type="text" class="form-control">
                                <span asp-validation-for="Contact" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Gstin"></label>
                                <input asp-for="Gstin" type="text" class="form-control">
                                <span asp-validation-for="Gstin" class="text-danger"></span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <div class="form-group" id="delete-image-main">
                                    <label asp-for="ImageFile"></label>
                                    <img height="150" src="/store/@Model.Image" />
                                    <button id="btnDeleteImage" data-id="@Model.Id" type="button" class="btn btn-danger">Delete Image</button>
                                </div>
                            }
                            <div class="form-group">
                                <label asp-for="ImageFile"></label>
                                <input asp-for="ImageFile" type="file" accept=".png, .jpg, .jpeg, .gif" class="form-control">
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                                <input type="hidden" asp-for="Image" />
                            </div>
                        </div>
                        <div class="card-footer text-right">
                            <a class="btn btn-outline-secondary" href="/Store"><i class="fas fa-arrow-left"></i> Back</a>
                            <button id="btnSave" type="submit" class="btn btn-warning"><i class="fas fa-pen"></i> Edit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
