@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer ViewLocalizer

@model Aby.StockManager.Model.ViewModel.Category.CreateCategoryViewModel
@{
    ViewData["Title"] = @ViewLocalizer["Create"] + " " + @ViewLocalizer["Product Category"];
}
@section script{
    <partial name="~/Views/Shared/_FormScriptsPartial.cshtml" />
}
<section class="content pt-2">
    <div class="container-fluid ">
        <div class="row ">
            <div class="col-md-6">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-plus"></i> @ViewLocalizer["Create"] @ViewLocalizer["Product Category"]</h3>
                    </div>
                    <form asp-action="Create" asp-antiforgery="true" id="frmCreate">
                        <div class="card-body">
                            <div class="form-group">
                                @ViewLocalizer["CategoryName"]
                                <input asp-for="CategoryName" type="text" class="form-control" placeholder="@ViewLocalizer["Enter"] @ViewLocalizer["CategoryName"]">
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer text-right">
                            <a class="btn btn-outline-secondary" href="/Category"><i class="fas fa-arrow-left"></i> @ViewLocalizer["Back"]</a>
                            <button id="btnSave" type="submit" class="btn btn-success"><i class="fas fa-plus"></i>  @ViewLocalizer["Create"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

