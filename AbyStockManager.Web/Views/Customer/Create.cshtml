@using AbyStockManager.Web.Resources;
@using AbyStockManager.Web.Models;
@model CustomerViewModel
@{
    ViewData["Title"] = "Create";
}

@inject LocalizationService LocalizationService

<section class="content pt-2">
    <div class="container-fluid ">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-plus"></i> Create Customer</h3>
                    </div>
                    <form asp-controller="Customer" asp-action="Create" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                @LocalizationService.GetLocalizedHtmlString("FullName")
                                <input asp-for="FullName" placeholder="@LocalizationService.GetLocalizedHtmlString("FullName")" class="form-control" />
                                <span asp-validation-for="FullName"></span>
                            </div>
                            <div class="form-group">
                                @LocalizationService.GetLocalizedHtmlString("City")
                                <input asp-for="City" placeholder="Enter City" class="form-control" />
                                <span asp-validation-for="City"></span>
                            </div>
                            <div class="form-group">
                                @LocalizationService.GetLocalizedHtmlString("MobileNo")
                                <input asp-for="MobileNo" placeholder="Enter MobileNo" class="form-control" />
                                <span asp-validation-for="MobileNo"></span>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="card-footer text-right">
                            <button style="margin-top: 10px" class="btn btn-success" type="submit"> Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>