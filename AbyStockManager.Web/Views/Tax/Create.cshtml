@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer ViewLocalizer

@model AbyStockManager.Web.Model.ViewModel.Tax.CreateTaxViewModel
@{
    ViewData["Title"] = @ViewLocalizer["Create"];
}
@section script{
    <partial name="~/Views/Shared/_FormScriptsPartial.cshtml" />
}
<section class="content pt-2">
    <div class="container-fluid ">
        <div class="row ">
            <div class="col-md-12">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-plus"></i> @ViewLocalizer["Create"]</h3>
                    </div>
                    <form asp-action="Create" asp-antiforgery="true" id="frmCreate">
                        <div class="card-body">
                            <div class="form-group">
                                @ViewLocalizer["Name"]
                                <input asp-for="Name" type="text" class="form-control" placeholder="@ViewLocalizer["Enter"] @ViewLocalizer["Name"]">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                @ViewLocalizer["Rate"]
                                <input asp-for="Rate" type="number" class="form-control" step="any" min="0.1" placeholder="@ViewLocalizer["Enter"] @ViewLocalizer["Rate"]">
                                <span asp-validation-for="Rate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer text-right">
                            <a class="btn btn-outline-secondary" href="/Tax"><i class="fas fa-arrow-left"></i> @ViewLocalizer["Back"]</a>
                            <button id="btnSave" type="submit" class="btn btn-success"><i class="fas fa-plus"></i>  @ViewLocalizer["CreateBtn"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

